{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table table-striped table-bordered table-light font-weight-bold " id="" cellspacing="0" width="100%">
        <thead class="unique-color text-light">
            <tr>
                <th scope="col" class="font-weight-bold">Id</th>
                <th scope="col" class="font-weight-bold">Libelle</th>
                <th scope="col" class="font-weight-bold">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td scope="col" class="font-weight-bold">{{ category.id }}</td>
                <td scope="col" class="font-weight-bold">{{ category.libelle }}</td>
                <td>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
