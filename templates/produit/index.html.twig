{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table table-striped table-bordered table-light font-weight-bold " id="" cellspacing="0" width="100%">
        <thead class="unique-color text-light">
            <tr>
                <th scope="col" class="font-weight-bold">Id</th>
                <th scope="col" class="font-weight-bold">Libelle</th>
                <th scope="col" class="font-weight-bold">Prix</th>
                <th scope="col" class="font-weight-bold">Categorie</th>
                <th scope="col" class="font-weight-bold">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td scope="col" class="font-weight-bold">{{ produit.id }}</td>
                <td scope="col" class="font-weight-bold">{{ produit.libelle }}</td>
                <td scope="col" class="font-weight-bold">{{ produit.prix }}</td>
                <td scope="col" class="font-weight-bold">{{ produit.category.libelle }}</td>
                <td>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
