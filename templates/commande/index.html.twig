{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table table-striped table-bordered table-light" id="" cellspacing="0" width="100%">
        <thead class="unique-color text-light">
            <tr>
                <th scope="col" class="font-weight-bold">Date</th>
                <th scope="col" class="font-weight-bold">Nom du Client</th>
                <th scope="col" class="font-weight-bold">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td scope="col" class="font-weight-bold">{{ commande.date ? commande.date|date('Y-m-d') : '' }}</td>
                <td scope="col" class="font-weight-bold">{{ commande.client.nom }}</td>
                <td>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('ligne_commande_new', {'id': commande.id}) }}">+Ligne de commande</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="font-weight-bold btn unique-color btn-sm m-0 text-light" href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
